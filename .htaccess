# Deny access
<FilesMatch "^(CLAUDE|AGENTS|SEO_AUDIT_REPORT)\.md$">
    Require all denied
</FilesMatch>

<FilesMatch "\.(sh|py|pl|json)$">
    Require all denied
</FilesMatch>

<FilesMatch "^\.(git|github|gitattributes)$">
    Require all denied
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^\.claude(/.*)?$ - [F,L]
    RewriteRule ^\.opencode(/.*)?$ - [F,L]
</IfModule>

# gzip compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/xml image/svg+xml
</IfModule>

# Browser caching
#<IfModule mod_expires.c>
